@model SacramentPlanner.Models.Hymns

@{
    ViewData["Title"] = "Edit";
}
<h1 class="mt-5">Edit Hymns</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3 mt-3">
                <input asp-for="Num" class="form-control" placeholder="Hymnn Number" />
                <label asp-for="Num" class="control-label">Number</label>
                <span asp-validation-for="Num" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 mt-3">
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <label asp-for="Name" class="control-label">Name</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary text-light mt-3" />
                <a class="btn btn-outline-primary mt-3" asp-action="Index">Back to Full List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
