@model SacramentPlanner.Models.Speaker

@{
    ViewData["Title"] = "Edit";
}
<h1 class="mt-5">Edit Speaker</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PlanID" class="form-control" />
            <input type="hidden" asp-for="ID" />
            <div class="form-floating mb-3 mt-3">
                <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                <label asp-for="LastName" class="control-label">Last Name</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 mt-3">
                <input asp-for="FirstMidName" class="form-control" placeholder="First Name" />
                <label asp-for="FirstMidName" class="control-label">First Name</label>
                <span asp-validation-for="FirstMidName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary mx-2 text-light" />
            </div>
        </form>
    </div>
</div>
<div>
    <a class="btn btn-outline-primary mt-3" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
