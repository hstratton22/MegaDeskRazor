@page
@model IndexModel
@{
    ViewData["Title"] = "Genesis Home";
}

<div class="text-center">
    <h1 class="display-4">Genesis MegaDesk</h1><br />
    <h2>Custom desk builds</h2>
    
</div>
<div id="myCarousel" class="carousel" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
    </ol>
    <div class="carousel-inner justify-content-lg-center">
        <div class="carousel-item active">
            <img src="~/Images/laminate.png" alt="laminate" />
        </div>
        <div class="carousel-item">
            <img src="~/Images/oak.jpg" alt="oak" />
        </div>
        <div class="carousel-item">
            <img src="~/Images/pine.jpg" alt="pine" />
        </div>
        <div class="carousel-item">
            <img src="~/Images/rosewood.jpg" alt="rosewood" />
        </div>
        <div class="carousel-item">
            <img src="~/Images/veneer.jpg" alt="veneer" />
        </div>

    </div>
</div>
