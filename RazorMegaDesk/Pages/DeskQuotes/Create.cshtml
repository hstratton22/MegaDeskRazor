@page
@model RazorMegaDesk.Pages.DeskQuotes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Deskquote</h4>
<hr />
<div class="container">
<form method="post">
    <div class="form-row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-4 mb-3">
            <label asp-for="Deskquote.CustomerName" class="control-label">Customer Name</label>
            <input asp-for="Deskquote.CustomerName" class="form-control" placeholder="Full Name" />
            <span asp-validation-for="Deskquote.CustomerName" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Deskquote.quoteDate" class="control-label">Date</label>
            <input asp-for="Deskquote.quoteDate" class="form-control">
            <span asp-validation-for="Deskquote.quoteDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label asp-for="Deskquote.Width" class="control-label">Width</label>
            <input asp-for="Deskquote.Width" class="form-control" placeholder="24 - 96 inches" />
            <span asp-validation-for="Deskquote.Width" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Deskquote.Depth" class="control-label">Depth</label>
            <input asp-for="Deskquote.Depth" class="form-control" placeholder="12 - 48 inches" />
            <span asp-validation-for="Deskquote.Depth" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label asp-for="Deskquote.DrawerCount" class="control-label">Drawers</label>
            <input asp-for="Deskquote.DrawerCount" class="form-control" placeholder="0 - 7" />
            <span asp-validation-for="Deskquote.DrawerCount" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Deskquote.RushDays" class="control-label">Rush Shipping?</label>
            <select asp-for="Deskquote.RushDays" class="form-control">
                <option value="0">Free Standard Shipping</option>
                <option value="3">3</option>
                <option value="5">5</option>
                <option value="7">7</option>
            </select>
            <span asp-validation-for="Deskquote.RushDays" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label asp-for="Deskquote.desktopMaterial" class="control-label">Desktop Material</label><br />
            <select asp-for="Deskquote.desktopMaterial" asp-items="Html.GetEnumSelectList<Models.DesktopMaterial>()" class="form-control">
            </select>
            <span asp-validation-for="Deskquote.desktopMaterial" class="text-danger"></span>
        </div>
       
    </div>

    <div class="form-row mb-3">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>

</form>


<div>
    <a class="btn btn-outline-info" asp-page="Index">Back to List</a>
</div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
