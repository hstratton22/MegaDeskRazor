@page
@model RazorMegaDesk.Pages.DeskQuotes.IndexModel

@{
    ViewData["Title"] = "Quotes";
}

<h1>All Quotes</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</p>

<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a class="btn btn-outline-primary"asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>
<div class="table-responsive">
    <table class="table table-sm">
        <thead>
            <tr>
                <th class="col-1">
                    <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort">
                        @Html.DisplayNameFor(model => model.Deskquote[0].CustomerName)
                    </a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Deskquote[0].Width)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Deskquote[0].Depth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Deskquote[0].DrawerCount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Deskquote[0].DesktopMaterial)
                </th>

                <th>
                    <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">
                        @Html.DisplayNameFor(model => model.Deskquote[0].QuoteDate)
                    </a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Deskquote[0].RushDays)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Deskquote[0].Cost)
                </th>

                <th></th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Deskquote)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Width)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Depth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DrawerCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DesktopMaterial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuoteDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RushDays)
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => item.Cost)
                    </td>
                    <td>
                        <a class="btn btn-outline-secondary" asp-page="./Details" asp-route-id="@item.ID">Details</a>
                        <a class="btn btn-outline-warning" asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                        <a class="btn btn-outline-danger" asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
